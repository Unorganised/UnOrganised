<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/un_organised_margin">

            <ImageView
                android:id="@+id/profile_icon_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/default_profile_pic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/un_organised_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/provier_name_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/service_type_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/un_organised_margin"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/amount_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/un_organised_margin"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/date_time_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/un_organised_margin"
        android:layout_weight="1"
        android:gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/navigate_cancel_layout"
            android:layout_margin="@dimen/un_organised_margin"
            android:orientation="horizontal">

            `<Button
                android:id="@+id/navigate_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:background="@drawable/btn_assign_job"
                android:gravity="center"
                android:text="@string/navigate"
                android:textColor="@color/white"
                android:textStyle="bold" />


           <!-- <Button
                android:id="@+id/cancel_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_deassign_job"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textStyle="bold" />-->
            <Button
                android:id="@+id/start_job_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_start_job"
                android:text="@string/start_job"
                android:textColor="@color/yellow"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_job_provider_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/un_organised_padding"
                android:background="@drawable/icon_call" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
