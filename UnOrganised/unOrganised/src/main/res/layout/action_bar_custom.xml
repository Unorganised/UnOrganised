<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_container_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green" >

    <LinearLayout
        android:id="@+id/actionbar_left_options_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dashboard_title_id"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="@dimen/un_organised_margin"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_right_side_options_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

         <ImageView
             android:id="@+id/search_img_id"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_gravity="center_vertical"
             android:layout_margin="10dp"
             android:visibility="gone"
             android:src="@drawable/icon_search_bar"
             />

         <LinearLayout
             android:id="@+id/jobs_list_switcher_layout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_gravity="center_vertical">

             <ImageView
                 android:id="@+id/jobs_list_img_id"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:layout_margin="10dp"
                 android:src="@drawable/icn_list_view" />

             <ImageView
                 android:id="@+id/maps_img_id"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:layout_margin="10dp"
                 android:src="@drawable/icn_map_view"
                 android:visibility="gone"/>

         </LinearLayout>

         <!--<ImageView-->
            <!--android:id="@+id/filter_img_id"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_margin="10dp"-->
            <!--android:src="@drawable/icon_filter" />-->
    </LinearLayout>
        <ImageView
            android:id="@+id/delete_all_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_job"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_margin="10dp" />


    <TextView
        android:id="@+id/type_of_user_title_id"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/job_seeker_text"
        android:layout_marginRight="@dimen/un_organised_margin"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>

</RelativeLayout>