<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_layout"
        layout="@layout/titlebar_layout"></include>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout">

        <LinearLayout
            android:id="@+id/maps_container_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:id="@+id/steps_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/fullname_top_margin"
            android:layout_marginBottom="@dimen/fullname_top_margin">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_not_selected_screen"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_not_selected_screen"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_not_selected_screen"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_not_selected_screen"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_not_selected_screen"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginRight="@dimen/un_organised_margin"
                android:src="@drawable/dot_selected_screen"/>
        </LinearLayout>
        <Button
            android:id="@+id/finish_reg_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/un_organised_margin"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="@string/finish_text"
            android:textColor="@color/yellow"
            android:textStyle="bold" />

        <Button
            android:id="@+id/confirm_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/un_organised_margin"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:text="@string/confirm_text"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>