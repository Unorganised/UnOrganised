<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="fill_vertical"
            android:background="@color/white"
            android:layout_margin="@dimen/un_organised_padding">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/profile_icon_id"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/default_profile_pic"
                        android:layout_margin="@dimen/activity_vertical_margin" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/un_organised_padding"
                    android:layout_marginTop="@dimen/un_organised_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ranjan Viswas"
                        android:textColor="@color/green"
                        android:id="@+id/seeker_name_id" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Whitefield Area, HSR layout"
                        android:textColor="@color/black"
                        android:id="@+id/seeker_address_id" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Carpentry"
                        android:textColor="@color/black"
                        android:id="@+id/job_title_id"
                        android:layout_marginTop="@dimen/activity_vertical_margin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="6 Jan 2016, 10:30 AM"
                        android:textColor="@color/black"
                        android:id="@+id/date_id" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fare"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/un_organised_padding"
                android:layout_marginLeft="@dimen/detail_left_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rs. 400.00"
                android:textColor="@color/black"
                android:id="@+id/price_id"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/detail_left_padding" />
            <TextView
                android:id="@+id/charged_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Charged"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/detail_left_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Paid Online"
                android:textColor="@color/black"
                android:id="@+id/charged_text_id"
                android:layout_marginBottom="@dimen/un_organised_padding"
                android:layout_marginLeft="@dimen/detail_left_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <TextView
                android:id="@+id/rated_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="You Rated"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/detail_left_padding" />
            <RatingBar
                android:id="@+id/rating_bar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:stepSize="1"
                android:layout_marginLeft="@dimen/detail_left_padding" />

            <TextView
                android:id="@+id/receipt_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Receipt"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/detail_left_padding" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sent to email address"
                android:textColor="@color/black"
                android:id="@+id/sent_to_email_id"
                android:layout_marginLeft="@dimen/detail_left_padding"
                android:layout_marginBottom="@dimen/un_organised_padding" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="center">
                <Button
                    android:id="@+id/detail_btn_id"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Need Help?"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_red"/>
                <Button
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:text="@string/subscribe"
                    android:id="@+id/subscribe_btn_id"
                    android:textColor="@color/white"
                    android:background="@drawable/button_selector"
                    android:layout_marginLeft="@dimen/un_organised_padding" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>




</LinearLayout>
