<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/titlebar_layout" />

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        android:layout_margin="@dimen/un_organised_margin">

        <!-- Child1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/helping_hand_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:gravity="center"
                android:text="@string/register_now_text"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:hint="@string/fullname"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/password_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/retype_password_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#00000000"
                android:hint="@string/retype_password"
                android:inputType="textPassword"
                android:maxLines="1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.51"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                </LinearLayout>

                <Button
                    android:id="@+id/next_btn_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/yellow" />
            </LinearLayout>
        </LinearLayout>

        <!-- Child2 -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/verify_mobile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:layout_marginRight="@dimen/text_right_margin"
                    android:layout_marginTop="@dimen/un_organised_padding"
                    android:gravity="center"
                    android:text="@string/otp_text"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text_mobile_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/un_organised_margin"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/country_code_txt_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:text="@string/india_mobile_code"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_MobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/un_organised_padding"
                        android:background="#00000000"
                        android:enabled="false"
                        android:hint="@string/mobile_number"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <!--  <Button
                      android:id="@+id/btn_EditMobile"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/activity_vertical_margin"
                      android:background="@drawable/button_selector"
                      android:text="@string/edit_mobile_no"
                      android:textColor="@color/yellow"
                      android:textSize="8pt" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="5pt"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1pt"
                        android:text="@string/resend_otp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/txtSend_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_again"
                        android:textColor="@color/green"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/text_verifyOTP"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/text_top_margin"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="@string/verify_OTP_text"
                    android:inputType="numberPassword"
                    android:maxLines="1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_verifyOTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@drawable/button_selector"
                        android:gravity="center"
                        android:text="@string/verify_otp"
                        android:textColor="@color/yellow"
                        android:textSize="8pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fullname_top_margin">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="@dimen/un_organised_margin"
                        android:src="@drawable/dot_not_selected_screen" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Child 3 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_hello_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_top_margin"
                    android:text="@string/hello"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/button_left_margin"
                    android:gravity="center"
                    android:text="@string/sel_type_of_user"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/layout_seeker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_top_margin"
                    android:background="@color/bg_gray">

                    <ImageView
                        android:id="@+id/seeker_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginRight="@dimen/text_right_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:src="@drawable/icn_seeker" />

                    <View
                        android:id="@+id/seeker_div_id"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/text_right_margin"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/seeker_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="@string/job_seeker"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/bg_gray">

                    <ImageView
                        android:id="@+id/provider_icon_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginRight="@dimen/text_right_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:src="@drawable/icn_provider" />

                    <View
                        android:id="@+id/provider_div_id"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/button_left_margin"
                        android:layout_marginRight="@dimen/text_right_margin"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/provider_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="@string/job_provider"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <EditText
                    android:id="@+id/referral_code_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="#00000000"
                    android:hint="@string/enter_referral_code"
                    android:maxLines="1"
                    android:singleLine="true" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/usertype_next_btn_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textColor="@color/yellow" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Child 4 -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fadeScrollbars="false"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/un_organised_margin"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/almosthere_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_top_margin"
                    android:text="@string/provide_bank_details"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/acnt_no_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/text_top_margin"
                    android:background="#00000000"
                    android:hint="@string/enter_accnt_number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true" />

                <requestFocus />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/re_enter_acnt_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="#00000000"
                    android:hint="@string/reenter_account_number"
                    android:inputType="number"
                    android:singleLine="true" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <Spinner
                    android:id="@+id/sel_bank_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:prompt="@string/select_bank_prompt" />

                <EditText
                    android:id="@+id/sel_isfc_code_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="#00000000"
                    android:hint="@string/isfc_code"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/adhar_no_id"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="#00000000"
                    android:hint="@string/adhar_no"
                    android:inputType="number"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:singleLine="true" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/age_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="#00000000"
                        android:hint="@string/enter_your_age"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/date_picker_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/date" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/upload_photo_text"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_img_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/upload_photo_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector_upload"
                        android:text="@string/upload_photo_text"
                        android:textColor="@color/green" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/proof_of_identity_text"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/id_proof_img_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/upload_idproof_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector_upload"
                        android:text="@string/upload_proof_of_identity_text"
                        android:textColor="@color/green" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/cancel_cheque_text"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cancelled_cheque_img_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/cancelled_cheque_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector_upload"
                        android:text="@string/upload_cancel_cheque_text"
                        android:textColor="@color/green" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/sel_document_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:prompt="@string/select_doc_prompt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doc_img_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/upload_doc_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_selector_upload"
                        android:text="@string/upload_doc_text"
                        android:textColor="@color/green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/fullname_top_margin">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="@dimen/un_organised_margin"
                            android:src="@drawable/dot_not_selected_screen" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/upload_user_details_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/un_organised_padding"
                        android:background="@drawable/button_selector"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textColor="@color/yellow" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Child 5 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_full_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/hello"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2pt"
                android:gravity="center"
                android:text="@string/prefered_services"
                android:textColor="@android:color/black" />

            <TableLayout
                android:id="@+id/service_type_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />

            <Button
                android:id="@+id/select_service_btn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fullname_top_margin"
                android:background="@drawable/button_selector"
                android:text="@string/next"
                android:textColor="@color/yellow" />
        </LinearLayout>

        <!-- Child 6 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/maps_container_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/finish_reg_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/un_organised_margin"
                android:background="@drawable/btn_large_blue_normal"
                android:gravity="center"
                android:text="@string/finish_text"
                android:textColor="@color/yellow"
                android:textStyle="bold" />
        </FrameLayout>
    </ViewFlipper>


</RelativeLayout>