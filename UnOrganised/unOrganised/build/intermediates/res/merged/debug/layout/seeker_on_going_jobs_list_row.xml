<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/un_organised_margin">

            <ImageView
                android:id="@+id/provider_profile_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_profile_pic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/un_organised_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/provier_name_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/service_type_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/un_organised_margin"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/amount_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/un_organised_margin"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/date_time_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/text_bottom_margin">


                <RatingBar
                    android:id="@+id/provider_ratingbar_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:stepSize="1"
                    style="?android:attr/ratingBarStyleSmall"/>

                <TextView
                    android:id="@+id/prvider_rating_count_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/un_organised_margin"
        android:layout_weight="1"
        android:gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/un_organised_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finish_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_stop_job"
                android:gravity="center"
                android:text="@string/stop_job"
                android:textColor="@color/yellow"
                android:layout_marginLeft="@dimen/un_organised_padding"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/cancel_btn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/un_organised_padding"
                android:background="@drawable/btn_deassign_job"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/yellow"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
