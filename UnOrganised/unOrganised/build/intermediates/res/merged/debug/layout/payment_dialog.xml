<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/un_organised_padding"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="@dimen/text_top_margin"
            android:layout_marginBottom="@dimen/text_bottom_margin"
            android:textColor="@color/green"
            android:text="@string/payment"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/green" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_amount"
            android:layout_marginTop="@dimen/text_top_margin"
            android:textColor="@color/black"
            android:id="@+id/bill_amount_id" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.400.00"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_bottom_margin"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:id="@+id/from_time_text_id"
            android:layout_marginTop="@dimen/un_organised_padding" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Carpentry job"
            android:textColor="@color/black"
            android:id="@+id/job_title_id_id" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sel_payment_type"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_top_margin"
            android:layout_marginBottom="@dimen/text_bottom_margin" />

        <Button
            android:id="@+id/ok_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/un_organised_margin"
            android:background="@drawable/btn_bg"
            android:text="@string/pay_now"
            android:textColor="@color/yellow"
            android:textStyle="bold" />

</LinearLayout>


</RelativeLayout>
