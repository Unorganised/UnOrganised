<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/un_organised_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_icon_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_profile_pic"
                android:layout_margin="@dimen/activity_vertical_margin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/un_organised_padding"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/un_organised_padding">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ranjan Viswas"
                    android:textColor="@color/green"
                    android:id="@+id/seeker_name_id" />
                <ImageView
                    android:id="@+id/delete_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/delete_job"/>
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Whitefield Area, HSR layout"
                android:textColor="@color/black"
                android:id="@+id/seeker_address_id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Carpentry"
                android:textColor="@color/black"
                android:id="@+id/job_title_id"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="6 Jan 2016, 10:30 AM"
                android:textColor="@color/black"
                android:id="@+id/date_id" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Rs. 400.00"
                    android:textColor="@color/black"
                    android:id="@+id/price_id"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />
            <Button
                android:id="@+id/detail_btn_id"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:text="@string/details"
                android:background="@drawable/button_selector"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
