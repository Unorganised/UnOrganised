<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payu.payuui" >

    <application
        android:allowBackup="true"
        android:label="@string/app_name" >
        <activity
            android:name=".PayUBaseActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:configChanges="orientation|keyboard|screenSize">
        </activity>
        <!-- lets not allow the user to change the orientation.-->
        <activity android:name=".PaymentsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity android:name=".PayUEmiActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".PayUCreditDebitCardActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".PayUCashCardActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".PayUNetBankingActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".PayUVerifyApiActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity android:name=".PayUStoredCardsActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
